<div class="min-h-screen bg-surface py-8">
  <div class="container-xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-primary mb-3">
        <span class="inline-block animate-pulse">👋</span> 创建你的专业名片
      </h1>
      <p class="text-lg text-secondary max-w-2xl mx-auto">
        填写下面的表单信息，创建你的专业名片。所有信息都可以后续修改。
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Left Column: Form -->
      <div class="order-2 lg:order-1">
        <div class="card">
          <div class="card-header">
            <h2 class="text-xl font-bold text-primary">基本信息</h2>
            <p class="text-sm text-secondary mt-1">请填写你的基本信息</p>
          </div>

          <div class="card-body">
            <%= form_with model: @profile, url: admin_profile_path(@profile), method: :patch, local: true, multipart: true, class: "space-y-6" do |f| %>
              <%= hidden_field_tag :from_onboarding, true %>
              <!-- Avatar Upload -->
              <div data-controller="image-preview">
                <label class="form-label">头像</label>
                <div class="flex items-center gap-4">
                  <div class="avatar avatar-lg border-2 border-border">
                    <% if @profile.avatar.attached? %>
                      <%= image_tag @profile.avatar, 
                          class: 'w-full h-full object-cover',
                          data: { image_preview_target: 'preview' } %>
                    <% else %>
                      <img src="" class="hidden w-full h-full object-cover" data-image-preview-target="preview">
                      <div class="w-full h-full bg-primary/10 flex items-center justify-center" data-image-preview-target="placeholder">
                        <svg class="w-12 h-12 text-primary/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                  <div>
                    <%= f.file_field :avatar, 
                        accept: "image/*", 
                        class: "hidden", 
                        id: "avatar-input",
                        data: { 
                          image_preview_target: 'input',
                          action: 'change->image-preview#preview'
                        } %>
                    <label for="avatar-input" class="btn-outline cursor-pointer inline-flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      上传头像
                    </label>
                    <p class="text-xs text-muted mt-1">支持 JPG、PNG、GIF 格式</p>
                  </div>
                </div>
              </div>

              <!-- Name -->
              <div>
                <label class="form-label">姓名 *</label>
                <%= f.text_field :full_name, 
                    value: @profile.full_name,
                    placeholder: "请输入你的姓名",
                    class: "form-input",
                    required: true %>
              </div>

              <!-- Title -->
              <div>
                <label class="form-label">职位/头衔 *</label>
                <%= f.text_field :title, 
                    value: @profile.title,
                    placeholder: "例如：高级律师、创始人、设计总监",
                    class: "form-input",
                    required: true %>
              </div>

              <!-- Company -->
              <div>
                <label class="form-label">公司/机构</label>
                <%= f.text_field :company, 
                    value: @profile.company,
                    placeholder: "请输入公司或机构名称",
                    class: "form-input" %>
              </div>

              <!-- Phone -->
              <div>
                <label class="form-label">联系电话</label>
                <%= f.text_field :phone, 
                    value: @profile.phone,
                    placeholder: "请输入联系电话",
                    class: "form-input" %>
              </div>

              <!-- Email -->
              <div>
                <label class="form-label">电子邮箱</label>
                <%= f.email_field :email, 
                    value: @profile.email,
                    placeholder: "请输入电子邮箱",
                    class: "form-input" %>
              </div>

              <!-- Location -->
              <div>
                <label class="form-label">所在地</label>
                <%= f.text_field :location, 
                    value: @profile.location,
                    placeholder: "例如：北京市朝阳区",
                    class: "form-input" %>
              </div>

              <!-- Bio -->
              <div>
                <label class="form-label">个人简介</label>
                <%= f.text_area :bio, 
                    value: @profile.bio,
                    placeholder: "简单介绍一下你的专业背景和优势...",
                    class: "form-input",
                    rows: 4 %>
                <p class="text-xs text-muted mt-1">建议 50-200 字</p>
              </div>

              <!-- Background Image Upload -->
              <div data-controller="image-preview">
                <label class="form-label">关于我 - 背景图片</label>
                <div class="space-y-3">
                  <% if @profile.background_image.attached? %>
                    <div class="relative aspect-video bg-surface-elevated rounded-lg overflow-hidden">
                      <%= image_tag @profile.background_image, 
                          class: 'w-full h-full object-cover',
                          data: { image_preview_target: 'preview' } %>
                    </div>
                  <% else %>
                    <div class="relative aspect-video bg-surface-elevated rounded-lg overflow-hidden border-2 border-dashed border-border">
                      <img src="" class="hidden w-full h-full object-cover" data-image-preview-target="preview">
                      <div class="w-full h-full flex flex-col items-center justify-center" data-image-preview-target="placeholder">
                        <svg class="w-12 h-12 text-primary/40 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <p class="text-sm text-muted">上传背景图片</p>
                      </div>
                    </div>
                  <% end %>
                  
                  <%= f.file_field :background_image, 
                      accept: "image/*", 
                      class: "hidden", 
                      id: "background-image-input",
                      data: { 
                        image_preview_target: 'input',
                        action: 'change->image-preview#preview'
                      } %>
                  <label for="background-image-input" class="btn-outline cursor-pointer inline-flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    上传背景图片
                  </label>
                  <p class="text-xs text-muted">建议尺寸 1200x675 像素，用于展示在名片页面</p>
                </div>
              </div>

              <!-- Specializations -->
              <div>
                <label class="form-label">专业领域</label>
                <%= f.text_field :specializations, 
                    value: @profile.specializations,
                    placeholder: "用逗号分隔，例如：公司法,知识产权,合同纠纷",
                    class: "form-input" %>
                <p class="text-xs text-muted mt-1">多个领域请用中文逗号（，）或英文逗号（,）分隔</p>
              </div>

              <!-- Department (for organization members) -->
              <% if @profile.organization.present? %>
                <div>
                  <label class="form-label">所属部门</label>
                  <%= f.text_field :department, 
                      value: @profile.department,
                      placeholder: "例如：法律部、产品部、研发中心",
                      class: "form-input" %>
                </div>
              <% end %>

              <!-- Submit Button -->
              <div class="flex gap-3 pt-4">
                <%= f.submit "保存并预览名片", class: "btn-primary flex-1" %>
                <%= link_to "跳过，稍后填写", root_path, class: "btn-outline" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column: Preview (Hidden on mobile) -->
      <div class="order-1 lg:order-2 hidden lg:block">
        <div class="sticky top-4">
          <div class="card">
            <div class="card-header">
              <h3 class="text-lg font-bold text-primary flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                名片预览
              </h3>
              <p class="text-sm text-secondary mt-1">这是你的名片在访客眼中的样子</p>
            </div>

            <div class="card-body">
              <!-- Avatar Preview -->
              <div class="text-center mb-6">
                <div class="inline-block">
                  <div class="avatar avatar-xl border-4 border-primary/20">
                    <% if @profile.avatar.attached? %>
                      <%= image_tag @profile.avatar, 
                          class: 'w-full h-full object-cover' %>
                    <% else %>
                      <div class="w-full h-full bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
                        <svg class="w-16 h-16 text-primary/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Name & Title -->
              <div class="text-center mb-6 pb-6 border-b border-border">
                <h2 class="text-2xl font-bold text-primary mb-1">
                  <%= @profile.full_name %>
                </h2>
                <p class="text-lg text-secondary">
                  <%= @profile.title %>
                  <% if @profile.company.present? %>
                    · <%= @profile.company %>
                  <% end %>
                </p>
              </div>

              <!-- Contact Info -->
              <div class="space-y-3 mb-6">
                <% if @profile.phone.present? %>
                  <div class="flex items-center gap-3 text-sm">
                    <div class="icon-container icon-container-sm">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </div>
                    <span class="text-secondary"><%= @profile.phone %></span>
                  </div>
                <% end %>

                <% if @profile.email.present? %>
                  <div class="flex items-center gap-3 text-sm">
                    <div class="icon-container icon-container-sm">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <span class="text-secondary"><%= @profile.email %></span>
                  </div>
                <% end %>

                <% if @profile.location.present? %>
                  <div class="flex items-center gap-3 text-sm">
                    <div class="icon-container icon-container-sm">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                    <span class="text-secondary"><%= @profile.location %></span>
                  </div>
                <% end %>
              </div>

              <!-- Bio -->
              <% if @profile.bio.present? %>
                <div class="mb-6 pb-6 border-b border-border">
                  <h4 class="text-sm font-semibold text-primary mb-2">个人简介</h4>
                  <p class="text-sm text-secondary leading-relaxed">
                    <%= @profile.bio %>
                  </p>
                </div>
              <% end %>

              <!-- Specializations -->
              <% if @profile.specializations_array.any? %>
                <div>
                  <h4 class="text-sm font-semibold text-primary mb-3">专业领域</h4>
                  <div class="flex flex-wrap gap-2">
                    <% @profile.specializations_array.each do |spec| %>
                      <span class="badge badge-primary"><%= spec %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Tips Card -->
          <div class="card mt-4">
            <div class="card-body">
              <div class="flex items-start gap-3">
                <div class="icon-container icon-container-sm flex-shrink-0">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="text-sm font-semibold text-primary mb-1">小提示</h4>
                  <ul class="text-xs text-secondary space-y-1">
                    <li>• 真实详细的信息更能吸引潜在客户</li>
                    <li>• 上传一张专业的照片作为头像</li>
                    <li>• 简介建议 50-200 字，简明扼要</li>
                    <li>• 所有信息都可以随时修改</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
