<div class="px-4 sm:px-6 lg:px-8 py-6">
  <!-- Header with Stats -->
  <div class="mb-6">
    <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">成员类别管理</h1>
    <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">为成员分配类别，便于管理和统计</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-900 rounded-lg p-3">
          <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">总成员数</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @total_members %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-100 dark:bg-green-900 rounded-lg p-3">
          <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">已分类</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @categorized_members %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-yellow-100 dark:bg-yellow-900 rounded-lg p-3">
          <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">未分类</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @uncategorized_members %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6 p-4 border border-gray-200 dark:border-gray-700">
    <%= form_with url: admin_member_categories_path, method: :get, class: "flex flex-col md:flex-row gap-4" do |f| %>
      <!-- Category Filter -->
      <div class="flex-1">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">筛选类别</label>
        <%= f.select :category, 
            options_for_select(
              [['全部类别', '']] + 
              @categories.map { |c| [c, c] } + 
              [['未分类', 'uncategorized']], 
              params[:category]
            ),
            {},
            class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Search -->
      <div class="flex-1">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">搜索成员</label>
        <%= f.text_field :search, 
            value: params[:search],
            placeholder: "搜索姓名、邮箱或职位...",
            class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Buttons -->
      <div class="flex items-end gap-2">
        <%= f.submit "筛选", class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "重置", admin_member_categories_path, class: "px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
      </div>
    <% end %>
  </div>

  <!-- Members Table -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              成员信息
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              联系方式
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              当前类别
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              分配类别
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% if @profiles.any? %>
            <% @profiles.each do |profile| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <!-- Member Info -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <% if profile.avatar.attached? %>
                        <%= image_tag profile.avatar.variant(resize_to_limit: [40, 40]), class: "h-10 w-10 rounded-full object-cover" %>
                      <% else %>
                        <div class="h-10 w-10 rounded-full bg-gray-200 dark:bg-gray-600 flex items-center justify-center">
                          <span class="text-sm font-medium text-gray-600 dark:text-gray-300">
                            <%= profile.full_name[0] %>
                          </span>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        <%= profile.full_name %>
                      </div>
                      <div class="text-sm text-gray-500 dark:text-gray-400">
                        <%= profile.title %>
                      </div>
                    </div>
                  </div>
                </td>

                <!-- Contact Info -->
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 dark:text-white">
                    <%= profile.email %>
                  </div>
                  <% if profile.phone.present? %>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      <%= profile.phone %>
                    </div>
                  <% end %>
                </td>

                <!-- Current Category -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= render "admin/member_categories/category_badge", profile: profile %>
                </td>

                <!-- Assign Category -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= form_with url: admin_member_category_path(profile), method: :patch, local: true, class: "flex items-center gap-2" do |f| %>
                    <%= f.hidden_field :page, value: params[:page] %>
                    <%= f.hidden_field :filter_category, value: params[:category] %>
                    <%= f.hidden_field :search, value: params[:search] %>
                    
                    <%= f.select :member_category, 
                        options_for_select(
                          [['-- 选择类别 --', '']] + 
                          @categories.map { |c| [c, c] },
                          profile.member_category
                        ),
                        {},
                        class: "rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white text-sm shadow-sm focus:border-blue-500 focus:ring-blue-500",
                        onchange: "this.form.submit()" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="px-6 py-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">没有找到符合条件的成员</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @profiles.total_pages > 1 %>
      <div class="bg-white dark:bg-gray-800 px-4 py-3 border-t border-gray-200 dark:border-gray-700 sm:px-6">
        <%= paginate @profiles, theme: 'twitter-bootstrap-4' %>
      </div>
    <% end %>
  </div>

  <!-- Help Info -->
  <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 border border-blue-200 dark:border-blue-800">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800 dark:text-blue-300">使用说明</h3>
        <div class="mt-2 text-sm text-blue-700 dark:text-blue-400">
          <ul class="list-disc list-inside space-y-1">
            <li>在"分配类别"列的下拉菜单中选择类别，系统会自动保存</li>
            <li>选择"-- 选择类别 --"可以清除当前类别设置</li>
            <li>使用顶部的筛选功能快速查找特定类别或未分类的成员</li>
            <li>可通过搜索框搜索成员姓名、邮箱或职位</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
