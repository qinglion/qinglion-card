<div class="px-4 sm:px-6 lg:px-8 py-6">
  <!-- Header -->
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">续费管理</h1>
      <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">管理成员续费记录</p>
    </div>
    <%= link_to new_admin_renewal_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      添加续费记录
    <% end %>
  </div>

  <!-- Selected Member Stats (shown when filtering by member) -->
  <% if @selected_profile.present? %>
    <div class="bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 mb-6 text-white">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <% if @selected_profile.avatar.attached? %>
            <%= image_tag @selected_profile.avatar.variant(resize_to_limit: [60, 60]), class: "h-14 w-14 rounded-full object-cover border-2 border-white" %>
          <% else %>
            <div class="h-14 w-14 rounded-full bg-white/20 flex items-center justify-center border-2 border-white">
              <span class="text-xl font-bold text-white">
                <%= @selected_profile.full_name[0] %>
              </span>
            </div>
          <% end %>
          <div class="ml-4">
            <h3 class="text-lg font-semibold"><%= @selected_profile.full_name %></h3>
            <p class="text-sm text-blue-100"><%= @selected_profile.email %></p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-sm text-blue-100 mb-1">总收款金额</p>
          <p class="text-3xl font-bold">¥<%= number_with_precision(@profile_total_amount, precision: 2, delimiter: ',') %></p>
          <p class="text-sm text-blue-100 mt-2">共 <%= @profile_renewal_count %> 条续费记录</p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-900 rounded-lg p-3">
          <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">总续费记录</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @total_renewals %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-100 dark:bg-green-900 rounded-lg p-3">
          <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">总收款金额</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white">¥<%= number_with_precision(@total_amount, precision: 2) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 border border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-yellow-100 dark:bg-yellow-900 rounded-lg p-3">
          <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">本月收款</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white">¥<%= number_with_precision(@this_month_amount, precision: 2) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6 p-4 border border-gray-200 dark:border-gray-700">
    <%= form_with url: admin_renewals_path, method: :get, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4" do |f| %>
      <!-- Profile Filter -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">筛选成员</label>
        <%= f.select :profile_id, 
            options_for_select(
              [['全部成员', '']] + @profiles.map { |p| [p.full_name, p.id] },
              params[:profile_id]
            ),
            {},
            class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Start Date -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">开始日期</label>
        <%= f.date_field :start_date, 
            value: params[:start_date],
            class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- End Date -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">结束日期</label>
        <%= f.date_field :end_date, 
            value: params[:end_date],
            class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Search -->
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">搜索成员</label>
        <%= f.text_field :search, 
            value: params[:search],
            placeholder: "姓名或邮箱...",
            class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Buttons -->
      <div class="flex items-end gap-2">
        <%= f.submit "筛选", class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= link_to "重置", admin_renewals_path, class: "px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600" %>
      </div>
    <% end %>
  </div>

  <!-- Renewals Table -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              成员信息
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              收款日期
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              金额
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              备注
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
              操作
            </th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% if @renewals.any? %>
            <% @renewals.each do |renewal| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                <!-- Member Info -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <% if renewal.profile.avatar.attached? %>
                        <%= image_tag renewal.profile.avatar.variant(resize_to_limit: [40, 40]), class: "h-10 w-10 rounded-full object-cover" %>
                      <% else %>
                        <div class="h-10 w-10 rounded-full bg-gray-200 dark:bg-gray-600 flex items-center justify-center">
                          <span class="text-sm font-medium text-gray-600 dark:text-gray-300">
                            <%= renewal.profile.full_name[0] %>
                          </span>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900 dark:text-white">
                        <%= renewal.profile.full_name %>
                      </div>
                      <div class="text-sm text-gray-500 dark:text-gray-400">
                        <%= renewal.profile.email %>
                      </div>
                    </div>
                  </div>
                </td>

                <!-- Payment Date -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900 dark:text-white">
                    <%= renewal.payment_date.strftime('%Y-%m-%d') %>
                  </div>
                </td>

                <!-- Amount -->
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-semibold text-green-600 dark:text-green-400">
                    <%= renewal.formatted_amount %>
                  </div>
                </td>

                <!-- Notes -->
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 dark:text-white max-w-xs truncate">
                    <%= renewal.notes.present? ? renewal.notes : '-' %>
                  </div>
                </td>

                <!-- Actions -->
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to admin_renewal_path(renewal, 
                        page: params[:page], 
                        filter_profile_id: params[:profile_id], 
                        search: params[:search]), 
                      method: :delete,
                      data: { 
                        turbo_method: :delete,
                        turbo_confirm: "确定要删除这条续费记录吗？" 
                      },
                      class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" do %>
                    <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">暂无续费记录</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @renewals.total_pages > 1 %>
      <div class="bg-white dark:bg-gray-800 px-4 py-3 border-t border-gray-200 dark:border-gray-700 sm:px-6">
        <%= paginate @renewals, theme: 'twitter-bootstrap-4' %>
      </div>
    <% end %>
  </div>
</div>
