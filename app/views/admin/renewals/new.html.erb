<div class="px-4 sm:px-6 lg:px-8 py-6">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center gap-4 mb-4">
        <%= link_to admin_renewals_path, class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">添加续费记录</h1>
      </div>
      <p class="text-sm text-gray-700 dark:text-gray-300">填写以下信息添加新的续费记录</p>
    </div>

    <!-- Form -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700">
      <div class="p-6">
        <%= form_with model: [:admin, @renewal], local: true, class: "space-y-6" do |f| %>
          <%= render 'shared/form_error_message', model: @renewal %>

          <!-- Profile Selection -->
          <div>
            <%= f.label :profile_id, "选择成员", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.select :profile_id, 
                options_for_select(@profiles.map { |p| [p.full_name, p.id] }, @renewal.profile_id),
                { prompt: "-- 请选择成员 --" },
                class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500",
                required: true %>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">选择要添加续费记录的成员</p>
          </div>

          <!-- Payment Date -->
          <div>
            <%= f.label :payment_date, "收款日期", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.date_field :payment_date, 
                value: @renewal.payment_date || Date.today,
                class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500",
                required: true %>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">实际收到款项的日期</p>
          </div>

          <!-- Amount -->
          <div>
            <%= f.label :amount, "金额（元）", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <div class="relative rounded-lg shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 dark:text-gray-400 sm:text-sm">¥</span>
              </div>
              <%= f.number_field :amount, 
                  step: 0.01,
                  min: 0,
                  placeholder: "0.00",
                  class: "w-full pl-8 rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500",
                  required: true %>
            </div>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">续费金额，必须大于 0</p>
          </div>

          <!-- Notes -->
          <div>
            <%= f.label :notes, "备注", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.text_area :notes, 
                rows: 4,
                placeholder: "选填：如付款方式、套餐类型等其他信息...",
                class: "w-full rounded-lg border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">可选填写，记录相关信息</p>
          </div>

          <!-- Action Buttons -->
          <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
            <%= link_to "取消", admin_renewals_path, 
                class: "px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
            <%= f.submit "保存续费记录", 
                class: "px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Help Info -->
    <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 border border-blue-200 dark:border-blue-800">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800 dark:text-blue-300">填写提示</h3>
          <div class="mt-2 text-sm text-blue-700 dark:text-blue-400">
            <ul class="list-disc list-inside space-y-1">
              <li>收款日期和金额为必填项</li>
              <li>金额支持两位小数，单位为人民币元</li>
              <li>备注为可选项，可记录付款方式、套餐类型等信息</li>
              <li>保存后会自动关联到选择的成员账户</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
